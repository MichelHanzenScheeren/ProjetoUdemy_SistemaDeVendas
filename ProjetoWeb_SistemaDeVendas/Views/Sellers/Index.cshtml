@model IEnumerable<ProjetoWeb_SistemaDeVendas.Models.Seller>

@{
    ViewData["Title"] = "SELLER";
}

<p> <h1>@ViewData["Title"]</h1> </p>

<a asp-action="Create" class="btn-link text-success">Create New</a>

<table class="table table-hover">
    <thead class="table-active">
        <tr>
            <th> @Html.DisplayNameFor(model => model.Name)</th>
            <th> @Html.DisplayNameFor(model => model.Email)</th>
            <th> @Html.DisplayNameFor(model => model.BirthDate)</th>
            <th> @Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Email) </td>
                <td> @Html.DisplayFor(modelItem => item.BirthDate) </td>
                <td> @Html.DisplayFor(modelItem => item.BaseSalary) </td>

                <td>
                    <a class="badge badge-pill badge-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a> / 
                    <a class="badge badge-pill badge-light" asp-action="Details" asp-route-id="@item.Id">Details</a> / 
                    <a class="badge badge-pill badge-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
         }
    </tbody>
</table> 